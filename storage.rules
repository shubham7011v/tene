rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to view and upload their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to view tene media
    match /tenes/{teneId}/{allPaths=**} {
      allow read: if request.auth != null;
      // Only allow upload if they're creating a new tene
      allow create: if request.auth != null && 
                    request.resource.size < 5 * 1024 * 1024 && // 5MB max
                    (request.resource.contentType.matches('image/.*') || 
                     request.resource.contentType.matches('video/.*'));
      // Only allow delete if they sent the tene
      allow delete: if request.auth != null;
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 