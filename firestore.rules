rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Common helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function userHasPhone(phoneNumber) {
      return request.auth.token.phone_number == phoneNumber;
    }
    
    // PairTenes collection - using deterministic IDs based on phone numbers
    match /pairTenes/{pairId} {
      // Allow read if user is signed in AND is either the sender or receiver by phone
      allow read: if isSignedIn() && (
        userHasPhone(resource.data.lastSenderPhone) || 
        userHasPhone(resource.data.lastReceiverPhone)
      );
      
      // Allow create/update if:
      // 1. User is signed in
      // 2. User is the sender (matches lastSenderPhone field)
      allow create, update: if isSignedIn() && 
                     userHasPhone(request.resource.data.lastSenderPhone);
      
      // Allow delete if user is signed in and is the sender
      allow delete: if isSignedIn() && userHasPhone(resource.data.lastSenderPhone);
    }
    
    // Legacy Tene messages - using predefined document IDs: senderId_receiverId
    match /tenes/{teneId} {
      // Allow read if user is signed in AND is either the sender or receiver
      allow read: if isSignedIn() && (
        resource.data.senderId == request.auth.uid || 
        resource.data.receiverId == request.auth.uid
      );
      
      // Allow create if:
      // 1. User is signed in
      // 2. User is the sender (matches senderId field)
      // 3. Document ID follows the pattern senderId_receiverId
      allow create: if isSignedIn() && 
                     request.resource.data.senderId == request.auth.uid &&
                     teneId == request.resource.data.senderId + "_" + request.resource.data.receiverId;
      
      // Allow update if user is signed in and is either sender or receiver
      allow update: if isSignedIn() && (
        resource.data.senderId == request.auth.uid ||
        resource.data.receiverId == request.auth.uid
      );
      
      // Allow delete if user is signed in and is the sender
      allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }
    
    // User document references collection - stores persistent references for sent Tenes
    match /userDocRefs/{userId} {
      // Allow read/write only if the user is accessing their own document
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 